@model CreateToDoViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


<div class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white rounded-2xl shadow-lg p-8 max-w-md w-full">
        <h1 class="text-2xl font-bold text-gray-800 mb-4">Create a New Item</h1>
        <form method="post" class="space-y-6">
            <!-- Title Field -->
            <div>
                <label asp-for="Title" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Title"
                       class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm p-3"
                       placeholder="Enter a title"
                       required>
                <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
            </div>

            <!-- Description Field -->
            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700"></label>
                <textarea asp-for="Description"
                          class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm p-3"
                          rows="4"
                          placeholder="Enter a description"
                          required></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>

            <!-- Submit Button -->
            <div>
                <button type="submit"
                        class="w-full bg-blue-500 text-white rounded-lg py-3 font-medium shadow hover:bg-blue-600 transition">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>
